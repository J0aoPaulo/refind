datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Status {
  LOST
  FOUND
}

model Item {
  id         Int      @id @default(autoincrement())
  name       String
  date       DateTime
  location   String
  contact    String
  photo      String?
  status     Status
  code       String   @unique
  category   Category @relation(fields: [categoryId], references: [id])
  categoryId Int
  user       User?    @relation(fields: [userId], references: [id])
  userId     String?
}

model Category {
  id    Int    @id @default(autoincrement())
  name  String
  items Item[]
}

model User {
  id    String @id @default(uuid())
  name  String
  phone String
  email String @unique
  items Item[]
}
